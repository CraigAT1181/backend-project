{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "returns an article by article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": 
        {
          "article_id": 2,
          "title": "Sony Vaio; or, The Laptop",
          "topic": "mitch",
          "author": "icellusedkars",
          "body": "Text from the article..",
          "created_at": "2020-10-16T05:03:00.000Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "returns an edited article with a modified votes value",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": 
        {
          "article_id": 2,
          "title": "Sony Vaio; or, The Laptop",
          "topic": "mitch",
          "author": "icellusedkars",
          "body": "Text from the article..",
          "created_at": "2020-10-16T05:03:00.000Z",
          "votes": 1,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "returns an array of comments by article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "comments": [
      {
        "comment_id": 5,
        "body": "I hate streaming noses",
        "article_id": 1,
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2020-11-03T21:00:00.000Z"
      }
    ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment to the relevant article, by article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "comment": 
      {
        "comment_id": 19,
        "body": "Interesting text",
        "article_id": 3,
        "author": "butter_bridge",
        "votes": 0,
        "created_at": "2023-10-04T16:38:29.326Z"
      }
    }
  },
  "GET /api/comments/:comment_id": {
    "description": "deletes a comment when given a valid comment_id",
    "queries": ["comment_id"]
  }
}
